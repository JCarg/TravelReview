<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/")
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-4">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <@Html.ActionLink("Abroadly.", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="navbar-collapse-4">
                <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">
                                <a href="#nav-collapse4" class="dropdown-toggle btn btn-default btn-outline collapsed" data-toggle="dropdown" role="button" aria-expanded="false" aria-controls="nav-collapse4"><img class="img-circle" src="https://upload.wikimedia.org/wikipedia/commons/7/74/Globe_icon_2014-06-26_22-09.png" alt="maridlcrmn" width="20"> Menu</a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Stories", "Index", "ReviewModels")</li>
                                    <li>@Html.ActionLink("Share your story", "Create", "ReviewModels")</li>
                                </ul>
                            </li>
                        </ul>             
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container -->
    </nav>

    
    
    
