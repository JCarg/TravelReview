@model IEnumerable<TravelReviewProject.Models.ReviewModel>

@{
    ViewBag.Title = "Index";
}

<body background="https://upload.wikimedia.org/wikipedia/commons/thumb/4/41/Simple_world_map.svg/2000px-Simple_world_map.svg.png">
    <h2 class="ReviewIndexTitle">Travel Stories</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6">
                <div class="thumbnail">
                    <div class="caption">
                        <h3>@Html.DisplayFor(modelItem => item.Title)</h3>
                        <div class="row">
                            <div class="col-md-12">
                                <h4>@Html.DisplayFor(modelItem => item.Location)</h4>
                            </div>
                        </div>
                        <div class="row">
                            <div class="container-fluid">
                                <img src="@Html.DisplayFor(modelItem=>item.Image)" style="width:100%; height:300px;" />
                            </div>
                        </div>
                        <p>@Html.DisplayFor(modelItem => item.Summary)</p>
                        <h5>
                            @Html.DisplayFor(modelItem => item.Category.Name)
                        </h5>
                        @Html.ActionLink("Read More", "Details", new { id = item.ID }, new { @class = "btn btn-primary", role = "button" })
                    </div>
                </div>
            </div>
        }
    </div>
</body>
